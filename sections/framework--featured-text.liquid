{% comment %} Variables {% endcomment %}
{%- liquid
assign heading = section.settings.heading | escape
assign bg_color = section.settings.bg_color
assign padding_top = section.settings.padding_top
assign padding_bottom = section.settings.padding_bottom
-%}

{% comment %} View {% endcomment %}
<div
  class="featured-text--root"
  style="background-color: {{ bg_color }};padding-top:{{ padding_top }};padding-bottom:{{ padding_bottom }}"
  data-section-id="{{ section.id }}"
  data-container="section"
>
  <div
    class="featured-text--blocks"
    data-container="panel"
  >
    <div class="featured-text--block" data-container="block">
      {% if heading != blank %}
        <h2 class="featured-text--heading" data-item="section-heading">{{ heading }}</h2>
      {% endif %}
      <div class="featured-text--body" data-item="rte-content">
        {{ section.settings.text }}
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Rich text",
    "settings": [
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background color",
        "default": "#ffffff"
      },
      {
        "type": "header",
        "content": "Content"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Talk about your brand"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Text",
        "default": "<p>Use this text to share information about your brand with your customers. Describe a product, share announcements, or welcome customers to your store.</p>"
      },
      {
        "type": "header",
        "content": "Space settings",
        "info": "Set top and bottom padding"
      },
      {
        "type": "text",
        "id": "padding_top",
        "label": "Padding top",
        "default": "20px",
        "info": "Unit is pixel"
      },
      {
        "type": "text",
        "id": "padding_bottom",
        "label": "Padding bottom",
        "default": "20px",
        "info": "Unit is pixel"
      }
    ],
    "presets": [
      {
        "name": "Rich text",
        "category": "Text"
      }
    ]
  }
{% endschema %}
