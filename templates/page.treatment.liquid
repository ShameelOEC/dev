<div class="treatment_page">
  {% section 'pages' %}
  <div class="colection_lists">
    <div class="collection">
      <div class="blocks">
        {% for collection in collections %}
        {% if collection.title contains "Treatment" %}
        <div class="block">
          <img src="{{collection.image | img_url:'master'}}">
          <h3>{{collection.title}}</h3>
          <a href="{{collection.url}}">View More</a>
        </div>
        {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>
<style>
  .template-page--main {
    padding: 72px 48px;
    margin: 0 auto;
    max-width: 1052px;
    text-align: center;
  }
  .template-page--main h1 {
    padding-bottom: 32px;
    text-align: center;
    font-weight: 400;
    font-family: "Linotype Didot", sans-serif;
    font-size: 28px;
  }  
  [data-item=paragraph], [data-item=rte-content], body{
    font-size:20px;
  }

  .collection {
    max-width: 1052px;
    margin: 0 auto;
  }  
  .blocks {
    display: grid;
    grid-template-columns: repeat(3,auto);
    gap: 40px 30px;
  }
  .block h3 {
    color: #454545;
    font-weight: 400;
    font-style: inherit;
    font-size: 16px;
    padding-top: 20px;
    padding-bottom: 20px;
    text-align: center;
    font-family: "ITC Avant Garde Gothic", sans-serif;
  }
  .block a {
    background-color: #454545;
    color: #fff;
    height: 45px;
    text-align: center;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    text-transform: uppercase;
    font-size: 14px;
  }  
  .featured-text--blocks {
    grid-template-columns: minmax(auto,7000px);
    text-align: center;
  }
  .featured-text--root .featured-text--heading {
    padding: 0 15px;
  }  
  @media (max-width:450px){
    .template-page--main {
      padding: 40px 48px;
    }
    .template-page--main h1 {
      padding-bottom: 10px;
      font-size: 18px;
    }  

    [data-item=paragraph], [data-item=rte-content], body {
      font-size: 12px;
    }
    .blocks {
      grid-template-columns: repeat(1,auto);
    }
    .block {
      max-width: 330px;
      margin: 0 auto;
    }

    .block h3 {
      font-size:12px;
    }
    .featured-text--root .featured-text--heading {
      margin: 0 auto 20px;
      max-width: 240px;
    }
  }  
  /* 
  ##Device = Tablets, Ipads (portrait)
  ##Screen = B/w 768px to 1024px
  */

  @media (min-width: 768px) and (max-width: 1024px) {

    /* CSS */
    .colection_lists {
      padding: 20px;
    }
    .featured-text--root .featured-text--heading {
      padding: 0 65px;
    }
    .container {

      padding: 0 20px;
    }
  }
</style>
